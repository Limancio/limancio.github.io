#version 330 core
layout (location = 0) in vec2 position;
layout (location = 1) in vec2 uv;
layout (location = 2) in vec4 color;

out vec2 v_uv;
out vec4 v_color;

uniform mat4 proj_matrix;

void main() {	
     gl_Position = proj_matrix * vec4(position.x, position.y, 0.0f, 1.0);
     v_uv        = uv;
     v_color     = color;
}

#frag
#version 330 core

out vec4 frag_color;

in vec2 v_uv;
in vec4 v_color;

uniform sampler2D font_texture;
uniform float ignore_texture;

void main() {
     float text = texture(font_texture, v_uv).r;
     if(ignore_texture == 1) {
       frag_color = vec4(v_color);
     } else {
       frag_color = vec4(text);
     }
}