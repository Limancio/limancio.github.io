#version 330 core
layout (location = 0) in vec2 position;
layout (location = 1) in vec2 uv;
layout (location = 2) in vec4 color;

out vec2 v_uv;
out vec4 v_color;
out vec2 v_frag_position;

uniform mat4 proj_matrix;

void main() {	
     gl_Position = proj_matrix * vec4(position.x, position.y, 0.0f, 1.0);
     v_uv        = uv;
     v_color 	 = color;
     v_frag_position = vec2(position.x, position.y);
}

#frag
#version 330 core

out vec4 frag_color;

in vec2 v_uv;
in vec4 v_color;
in vec2 v_frag_position;

uniform sampler2D u_texture_font;
uniform sampler2D u_texture_diffuse;
uniform sampler2D u_texture_specular;

uniform float u_draw_type;
uniform vec2  light_position;

struct light {
  vec2 position;
  float radius;
  
  vec3 ambient;
  vec3 diffuse;
  vec3 specular;
  
  float constant;
  float linear;
  float quadratic;
};

uniform light u_light_array[5];
uniform float u_light_count;

void main() {
  int type = int(u_draw_type + 0.5);
  
  if(type == 1) {
    frag_color = vec4(texture(u_texture_font, v_uv).r); 
  } else if(type == 2) {
    frag_color = texture(u_texture_diffuse, v_uv); 
  } else if(type == 3) {
    frag_color = v_color; 
  } else if(type == 4) {
    int light_count = int(u_light_count + 0.5);
    
    vec3 diffuse_color  = vec3(v_color.rgb);
    float alpha = 0.0f;
    
    for(int i = 0; i < light_count; i++) {
      // attenuation
      float distance    = length(u_light_array[i].position - v_frag_position);
      float attenuation = u_light_array[i].radius / (u_light_array[i].constant + u_light_array[i].linear * distance + u_light_array[i].quadratic * (distance * distance));
      diffuse_color = diffuse_color * attenuation * u_light_array[i].diffuse;
      
      alpha = attenuation;
    }

    if(alpha < 0.1)
      discard;
    
    frag_color = vec4(diffuse_color, alpha);
  } else if(type == 5) {
    vec3 ambient_color  = vec3(0.0);
    vec3 diffuse_color  = vec3(texture(u_texture_diffuse,  v_uv).rgb); 
    vec3 specular_color = vec3(texture(u_texture_specular, v_uv).rgb); 
    int light_count = int(u_light_count + 0.5);
        
    for(int i = 0; i < light_count; i++) {
      // attenuation
      float distance    = length(u_light_array[i].position - v_frag_position);
      float attenuation = u_light_array[i].radius / (u_light_array[i].constant + u_light_array[i].linear * distance + u_light_array[i].quadratic * (distance * distance));
      
      diffuse_color  = diffuse_color  * u_light_array[i].diffuse;
      specular_color = specular_color * u_light_array[i].specular;
      ambient_color  = diffuse_color  * u_light_array[i].ambient;

      specular_color = specular_color * attenuation;
      diffuse_color  = diffuse_color * attenuation;
      //ambient_color  = ambient_color * attenuation;
    }

    
    frag_color = vec4(ambient_color + diffuse_color + specular_color, 1.0);
  }
}
